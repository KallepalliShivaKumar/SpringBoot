package com.shiva.Main;

import org.springframework.context.ApplicationContext;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;

import com.shiva.Interface.AppConfig.AppConfiguration;
import com.shiva.Interface.Bean.NotificationService;

public class MainApp {

	public static void main(String[] args)
	{
		ApplicationContext ac = new AnnotationConfigApplicationContext(AppConfiguration.class);
		NotificationService bean = ac.getBean(NotificationService.class);
		bean.NotificationSender();
	}

}
